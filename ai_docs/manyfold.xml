	0% {
		transform: rotate(0deg);
	}

	10% {
		transform: rotate(180deg);
	}

	50% {
		transform: rotate(180deg);
	}

	60% {
		transform: rotate(360deg);
	}

	100% {
		transform: rotate(360deg);
	}
}

.icon-spin::before {
	animation: spin 5s linear infinite;
}

@keyframes spin {
	0% {
		transform: rotate(0deg);
	}

	50% {
		transform: rotate(180deg);
	}

	100% {
		transform: rotate(360deg);
	}
}
